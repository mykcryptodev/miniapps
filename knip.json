{
  "ignoreWorkspaces": ["examples/**"],
  "workspaces": {
    "packages/*": {
      "entry": "src/index.ts",
      "project": "**/*.ts"
    },
    "packages/create-mini-app": {
      "entry": ["index.ts", "bin.ts"],
      "project": "**/*.ts"
    },
    "packages/frame-host": {
      "entry": "src/index.ts",
      "project": "**/*.ts",
      "ignore": ["src/comlink/**/*.ts"]
    },
    "site": {
      "project": ["**/*.ts", "**/*.tsx", "**/*.mdx"]
    }
  }
}
